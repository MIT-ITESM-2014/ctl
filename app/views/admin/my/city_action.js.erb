(function(){
	$(function(){
		app.dashboard.profile.city = {};
		$.extend(app.dashboard.profile.city, {
			parent: app.dashboard.profile,
			root: null,
			lang: null,
			container: null,
			form: null,
			init: function(){
				this.initRoot();
				this.initLang();
				this.initContainer();
				this.initForm();
			},
			initLang: function(){
				this.lang = this.parent.lang;
			},	
			initForm: function(){
				var _self = this;
				this.form = this.root.fmx.form({
					container: this.container.find('#profile_city_form'),
					loading: function(){
						_self.formLoading();
					},
					loaded: function(){
						_self.formLoaded();
					},
					error: function(){
						_self.error();
					},
					success: function(data){
						_self.formOnSuccess(data);
					}
				});
			},
			formLoading: function(){
				this.root.loading();
			},
			formLoaded: function(){
				this.root.loaded();
			},
			formOnSuccess: function(data){
				this.root.fmx.notification({
					msg: this.lang.update_labels.city
				});
			},
			error: function(){
				this.root.error();
			},
			initContainer: function(){
				this.container = this.parent.container.find('#profile_city');
			},
			initRoot: function(){
				this.root = this.parent.root;
			}
		});
		app.dashboard.profile.city.init();
	});
})(jQuery);