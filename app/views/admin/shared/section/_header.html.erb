<% opts = section_header_defaults(opts) %>
<div class="section_header">
    <div class="section_header_actions">
        <div class="section_actions_container">
			<% if opts[:show_cancel_btn] %>
			<a id="<%= opts[:cancel_btn_id] %>" href="#" class="section_action" data-overlay="<%= t "app.admin.actions.back" %>">
				<%= image_tag 'admin/icons/section_actions/back.png', width: 24, height: 24 %>
            </a>
			<% end %>
			<%= yield :header_actions %>
			<% if opts[:show_add_btn]  %>
			<a id="<%= opts[:add_btn_id] %>" href="#" class="section_action" data-overlay="<%= t "app.admin.actions.add" %>">
				<%= image_tag 'admin/icons/section_actions/add.png', width: 24, height: 24 %>
            </a>
			<% end %>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="section_header_title">
        <h1><%= raw I18n.t opts[:lang_key], opts[:lang_args] %></h1>
    </div>
	<div class="clear"></div>
</div>