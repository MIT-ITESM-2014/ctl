(function(){
  $(function(){
    var el = app.stats.charts.observed_vehicles = {};
    $.extend(el,{
      parent: app.stats.charts,
      init: function(){
        var base = this.parent.getChart('observed_vehicles');
        $.extend(base, this);
        $.extend(this, base);
        this.initSlide();
      },
      setLang: function(){
        var local = this.lang.chart;
        $.extend(this.opts, {
          title: {
            text: local.title
          },
          subtitle: {
            text: local.subtitle
          },
          credits: {
            text: local.credits
          },
          xAxis: {
            categories: this.getXAxis(),
            tickmarkPlacement: 'on',
            title: {
              text: local.x_axis
            }
          },
          yAxis: {
            title: {
              text: local.y_axis
            }
          }
        });
      },
      setData: function(){
        var series = this.data.usage;
        $.extend(this.opts, {
          series: series
        });
      }
    });
    el.init();
  });
})(jQuery);
