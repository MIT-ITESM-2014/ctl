(function(){
  $(function(){
    var el = app.stats.charts.peak_delivery = {};
    $.extend(el,{
      parent: app.stats.charts,
      init: function(){
        var base = this.parent.getChart('peak_delivery');
        $.extend(base, this);
        $.extend(this, base);
        this.initSlide();
      },
      setLang: function(){
        var local = this.lang.chart;
        $.extend(this.opts, {
          title: {
            text: local.title
          },
          credits: {
            text: local.credits
          },
          xAxis: {
            categories: this.getXAxis(),
            title: local.x_axis
          }
        });
      },
      setData: function(){
        console.log(this.data);
        $.extend(this.opts, {
          series: [{
            type: 'column',
            name: 'Average Deliveries per Hour',
            data: this.data.hour          
          },{
            type: 'column',
            name: 'Average Deliveries During Peak Period',
            data: this.data.peak
          },{
            type: 'spline',
            name: 'Average for the Selected Kms',
            data: this.data.average,
            marker: {
              lineWidth: 4,
              lineColor: Highcharts.getOptions().colors[2],
              fillColor: Highcharts.getOptions().colors[2]
           }
          }]
        });
      }
    });
    el.init();
  });
})(jQuery);
